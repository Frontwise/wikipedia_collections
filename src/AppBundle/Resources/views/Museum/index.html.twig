{% extends '::baseAdmin.html.twig' %}

{% block bodyClass %}museumIndex{% endblock %}

{% block content -%}
    <h1>Museum overzicht</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>{% include 'FrontwiseCrudBundle:index:order.html.twig' with {field: 'id', route: 'museum'} %}</th>
                <th>{% include 'FrontwiseCrudBundle:index:order.html.twig' with {field: 'name', route: 'museum'} %}</th>
                <th class="actions">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for museum in museums %}
            <tr>
                <td><a href="{{ path('museum_show', { 'id': museum.id }) }}">{{ museum.id }}</a></td>
                <td>{{ museum.name }}</td>
                <td class="actions">
                    <ul class="actions">
                        <li>
                            <a class="btn btn-primary" href="{{ path('museum_edit', { 'id': museum.id }) }}">Bewerk</a>
                        </li>
                        <li>
                            <a class="btn btn-default" href="{{ path('museum_show', { 'id': museum.id }) }}" target="_blank">
                                <i class="glyphicon glyphicon-new-window"></i>
                                Bekijk in app
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    {% include 'FrontwiseCrudBundle:index:pagination.html.twig' with {route: 'museum'} %}

    <ul class="record_actions">
        <li>
            <a class="btn btn-primary" href="{{ path('museum_new') }}">
                Nieuw museum
            </a>
        </li>
    </ul>
    
{% endblock %}
