{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap/dist/css/bootstrap.css') }}" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="{{ asset('compiled/backend.css') }}" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('compiled/backend.js') }}"></script>
{% endblock %}

{% block body %}
    {% block menu %}
        <div class=" menu">
            <ul class="nav nav-pills container">
                <li>
                    <a href="{{ path('museum') }}">Musea</a>
                </li>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <li>
                        <a href="{{ path('admin_user') }}">Beheerders</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    {% endblock %}
    <div class="container">
        {% block content %}{% endblock %}
    </div>
{% endblock %}